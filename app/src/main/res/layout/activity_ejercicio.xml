<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EjercicioActivity">

    <!-- Título de la rutina -->
    <TextView
        android:id="@+id/textViewTitulo"
        android:text="@string/rutina_del_d_a"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Contenedor de los ejercicios -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="6dp"
        android:radius="12dp"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewEjercicios"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <!-- Botón de agregar ejercicio -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAgregarEjercicio"
        style="?attr/materialButtonOutlinedStyle"
        android:text="@string/agregar_ejercicio"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

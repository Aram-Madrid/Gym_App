<resources>
    <style name="EstiloBoton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:backgroundTint">?android:attr/colorPrimary</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="EstiloEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EstiloEditNumero" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>


    <style name="EstiloEditTextMediano" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/colorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TituloPrincipal">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name ="android:layout_marginTop">10dp</item>
    </style>

    <style name="TituloPrincipalCardview">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TituloHome">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TituloCentrado">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTexto">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="SubTextoCardview">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#757575</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TituloSecundario">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TituloSecundarioHome">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EstiloCardView">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">?android:attr/colorAccent</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="EstiloCardViewEjercicios">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="android:radius">12dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="EstiloSpinner" >
        <item name="android:padding">12dp</item>
    </style>

    <style name="EstiloBotonImagen">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

